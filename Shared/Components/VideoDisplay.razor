<body>
    <center>
        <div class="video-container">
                <video controls>
                    <source src="@Video" type="video/mp4">
                </video>
                <MudPaper Class="mt-n11 pt-16 pb-8 rounded-xl" Style="width: 80%" Elevation="6">
                    <MudText Typo="Typo.h6">@Caption</MudText>
                    <MudText>@SubCaption</MudText>
                </MudPaper>
        </div>
    </center>
</body>

<style>
    body {
        width: 100%;
        height: 100%;
    }

    .video-container {
        width: 90%;
        height: 100%;
    }

    video {
        width: 100%;
        max-width: 80%;
        border-top-left-radius: 24px;
        border-top-right-radius: 24px;
    }
</style>

@code {
    [Parameter]
    public string Video {get; set;} = "";
    [Parameter]
    public string Caption {get; set; } = "";
    [Parameter]
    public string SubCaption {get; set; } = "";
}