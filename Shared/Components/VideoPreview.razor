<MudStack AlignItems="AlignItems.Center">
    <MudLink Href=@ThisVideo.Href Underline="Underline.None">
        <MudCard Class="mb-9 mr-6 ml-6 rounded-xl hover-shadow" Style="width: 350px; height: 300px;" Elevation="0">
            <MudCardMedia Style="height: 210px" Image=@ThisVideo.PreviewImg></MudCardMedia>
            <MudCardContent>
                <MudText Typo="Typo.h6"><b>@ThisVideo.Title</b></MudText>
                <MudText>@ThisVideo.SubTitle</MudText>
            </MudCardContent>
        </MudCard>
    </MudLink>
</MudStack>

@code {
    [Parameter]
    public Video ThisVideo {get; set;} = new Video(); 
}
