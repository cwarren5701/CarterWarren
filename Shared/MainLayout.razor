@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudSpacer />
        <MudButtonGroup Color="Color.Default" Variant="Variant.Text" Class="mr-n8">
            <MudTooltip Text="Basketball">
                <MudIconButton Href="/" Icon="@Icons.Filled.SportsBasketball" Color="Color.Warning"/>
            </MudTooltip>
            <MudTooltip Text="Academics">
                <MudIconButton Href="/academics" Icon="@Icons.Filled.MenuBook" Color="Color.Primary"/>
            </MudTooltip>
        </MudButtonGroup>
        <MudSpacer />
        <MudTooltip Text="About Me" Class="mt-n2">
            <MudIconButton Icon="@Icons.Material.Filled.Person" Class="mr-n3" OnClick="OpenOverlay"/>
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
            <MudOverlay @bind-Visible="isVisible" DarkBackground="true" AutoClose="true" >
                <Bio/>
            </MudOverlay>
            <MudText Class="mt-16 mb-16"></MudText>
            <FindCodeBanner/>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool isVisible;

    public void OpenOverlay() {
        isVisible = true;
        StateHasChanged();
    }
}