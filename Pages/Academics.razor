        <MudExpansionPanels>
            <ImageExpansionPanel Title="December 2021 Score Report" Alt="December 2021 Score Report" Src="imgs/DECSATscorereport.png"/>
            <ImageExpansionPanel Title="August 2022 Score Report" Alt="August 2022 Score Report" Src="imgs/AUGSATscorereport.png"/>
        </MudExpansionPanels>
    </MudTabPanel>
    <MudTabPanel Text="AP">
        <MudImage Src="imgs/APscorereport.png" Alt="AP score report" Elevation="25" Class="rounded-lg center" Width="850" Fluid="true"/>
