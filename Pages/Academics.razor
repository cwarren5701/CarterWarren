<PageTitle>Academics</PageTitle>
<MudText Class="mt-n16 pt-0" Align="Align.Center" Typo="Typo.h2" >Academics</MudText>
<MudTabs Elevation="4" Rounded="true" Centered="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
